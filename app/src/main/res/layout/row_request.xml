<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#fff"
    app:contentPadding="3dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvRequestName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request name"
            android:layout_marginLeft="20dp"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/tvRequestDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="29/3/2020"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="#000"
            />
        <TextView
            android:id="@+id/tvRequestDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request description"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/tvRequestName"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            />
        <TextView
            android:id="@+id/tvStatus"
            android:layout_below="@id/tvRequestDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:layout_centerInParent="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            />
        <TextView
            android:id="@+id/tvPickdate"
            android:layout_below="@id/tvRequestDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30/3/2020"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            />

       <Button
           android:id="@+id/btnView"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/tvRequestDesc"
           android:layout_alignParentRight="true"
           android:text="view"
           android:background="@color/colorPrimaryDark"
           android:layout_marginBottom="10dp"
           android:layout_marginRight="10dp"/>





    </RelativeLayout>

</androidx.cardview.widget.CardView>